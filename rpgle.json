{
	"Select statement": {
		"prefix": "select",
		"body": [
			"select;",
			"\twhen $1;",
			"\t\t$2",
			"\tother;",
			"\t\t$3",
			"endsl;",
			"$0"
		],
		"description": "Create a SELECT statement"
	},

	"If-End": {
		"prefix": "if",
		"body": [
			"if $1;",
			"\t$2;",
			"endif;",
			"$0"
		],
		"description": "Create an IF-END statement"
	},

	"If-Else-End": {
		"prefix": "if else",
		"body": [
			"if $1;",
			"\t$2;",
			"else;",
			"\t$3;",
			"endif;",
			"$0"
		],
		"description": "Create an IF-ELSE-END statement"
	},

	"Declare procedure no parms/return":{
		"prefix": "dcl-proc",
		"body": [
			"dcl-proc  $1;",
			"",
			"\t$0",
			"",
			"\treturn;",
			"end-proc  $1;"
		],
		"description": "Declare a subprocedure no parms/return"
	},

	"Declare procedure w/return":{
		"prefix": "dcl-proc rtn",
		"body": [
			"dcl-proc  $1;",
			"\tdcl-pi *n $2;",
			"\tend-pi;",
			"",
			"\tdcl-s  rtnVal  $2;",
            "",
			"\t$0",
			"",
			"\treturn  rtnVal;",
			"end-proc  $1;"
		],
		"description": "Declare a subprocedure with return value"
	},

	"Declare procedure interface":{
		"prefix": "dcl-pi",
		"body": [
			"dcl-pi *n $1;",
			"\t$2;",
			"end-pi;",
			"$0"
		],
		"description": "Declare a procedure interface"
	},
	
	"Data Structure" : {
		"prefix" : "dcl-ds",
		"body" : [
			"dcl-ds  ${1:name} ${2:qualified} ${3:inz}  ${4:dim()};",
			"\t${5:subfield}  $6;",
			"\t$0",
			"end-ds;"
		]
	},

    "Bold Header": {
        "prefix": "===",
        "body": [
            "//=====================================================================",
            "// $1",
            "//=====================================================================",
            "$0"
        ],
        "description": "Bold Header"
    },

    "RPG Headers": {
        "prefix": "ctl-opt",
        "body": [
            "ctl-opt option(*nodebugio : *srcstmt : *nounref);",
            "ctl-opt dftactgrp(*no) actgrp(${1:*caller});",
            "${2:ctl-opt pgminfo(*pcml : *module);}",
            "$0"
        ],
        "description": "RPG Headers/Control Options" 
    },
    "RPG Linear-Main Headers": {
        "prefix": "ctl-opt",
        "body": [
            "ctl-opt option(*nodebugio : *srcstmt : *nounref);",
            "ctl-opt dftactgrp(*no) actgrp(${1:*caller});",
            "${2:ctl-opt pgminfo(*pcml : *module);}",
            "ctl-opt main(${3:main});",
            "$0"
        ],
        "description": "RPG Linear-Main Headers/Control Options"
    },
    "RPG SRVPGM Headers": {
        "prefix": "ctl-opt",
        "body": [
            "ctl-opt option(*nodebugio : *srcstmt : *nounref);",
            "ctl-opt dftactgrp(*no) actgrp(${1:*caller});",
            "${2:ctl-opt pgminfo(*pcml : *module);}",
            "ctl-opt nomain;",
            "$0"
        ],
        "description": "RPG SRVPGM Headers/Control Options"
    },

    "Comment line" : {
        "prefix" : "---",
        "body" : [
            "//------------------------------------------------------------------------------",
            "// $1",
            "//------------------------------------------------------------------------------",
	    "$0"
        ]
    },

    "Procedure Prototype" : {
        "prefix" : "dcl-pr",
        "body" : [
            "dcl-pr ${1:procedure} ${2:return}  extproc(*dclcase);",
            "\t${3:parm} \t${4:type}",
            "end-pr;",
            "$0"
        ]
    },

    "Procedure Program Prototype" : {
        "prefix" : "dcl-pr pgm",
        "body" : [
            "dcl-pr ${1:program} extpgm('$2');",
            "\t${3:parm} \t${4:type}",
            "end-pr;",
            "$0"
        ]
    },

    "Choices": {
        "prefix": "choice",
        "body": [
            "Make a choice: pick door ${1|one,two,three|};",
            "$0"
        ],
        "description": "Choice"
    }

}
